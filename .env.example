# Anthropic API Key for Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# CUR Configuration
CUR_S3_BUCKET=your-cur-bucket-name
CUR_REPORT_PREFIX=cur-reports
CUR_DATABASE_NAME=cur_database
CUR_TABLE_NAME=cur_table

# Athena Configuration (for querying CUR data)
ATHENA_OUTPUT_LOCATION=s3://your-athena-results-bucket/
ATHENA_WORKGROUP=primary

# Redis Configuration (for conversation history)
# If Redis is not available, the system will use in-memory storage
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
